{
    "root": {
        "src": ".\/",
        "dest": ".\/assets\/local"
    },
    "tasks": {
        "browserSync": {
            "proxy": "localhost\/site-core-test"
        },
        "static": {
            "src": "static",
            "dest": ".\/"
        },
        "javascript": {
            "src": "assets_src\/js",
            "dest": "js",
            "entries": {
                "app": [
                    ".\/app.js"
                ]
            },
            "extensions": [
                "js",
                "json"
            ],
            "babel": {
                "presets": [
                    "es2015",
                    "stage-1"
                ],
                "plugins": [

                ]
            },
            "extractSharedJs": false
        },
        "css": {
            "src": "assets_src\/css",
            "dest": "css",
            "autoprefixer": {
                "browsers": [
                    "last 3 version"
                ]
            },
            "extensions": [
                "less",
                "scss",
                "css"
            ]
        },
        "images": {
            "src": "assets_src\/images",
            "dest": "images",
            "extensions": [
                "jpg",
                "png",
                "svg",
                "gif"
            ]
        },
        "fonts": {
            "src": "assets_src\/fonts",
            "dest": "fonts",
            "extensions": [
                "woff2",
                "woff",
                "eot",
                "ttf",
                "svg"
            ]
        },
        "svgSprite": {
            "src": "assets_src\/icons",
            "dest": "images",
            "extensions": [
                "svg"
            ]
        },
        "production": {
            "rev": true
        }
    }
}